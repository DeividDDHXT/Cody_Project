pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Clonar el repositorio
            
            }
        }
        stage('Install Dependencies') {
            steps {
                // Configurar el entorno virtual y activar
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
                
                // Instalar dependencias desde requirements.txt
               
            }
        }
        stage('Run Tests') {
            steps {
                // Ejecutar las pruebas del proyecto Django
                sh 'python manage.py test'
            }
        }
        stage('Migrations') {
            steps {
                // Aplicar migraciones a la base de datos
                sh 'python manage.py migrate'
            }
        }
        stage('Run Server') {
            steps {
                // Ejecutar el servidor de desarrollo para probar localmente
                sh 'python manage.py runserver'
            }
        }
    }
    post {
        always {
            // Limpiar el entorno al finalizar
            sh 'deactivate'
        }
        success {
            echo 'Pipeline completado con Ã©xito.'
        }
        failure {
            echo 'El pipeline ha fallado.'
        }
    }
}
